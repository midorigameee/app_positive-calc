<%-include("header") %>
<body>
  <div class="container text-center">
    <!-- 上段の3個 -->
    <div class="row d-none d-sm-flex">
      <div class="col-4 item">
        <p class="sabu-word"><%=result_words[0] %></p>
      </div>
      <div class="col-4 item">
        <p class="sabu-word"><%=result_words[1] %></p>
      </div>
      <div class="col-4 item">
        <p class="sabu-word"><%=result_words[2] %></p>
      </div>
    </div>

    <div class="row">
      <!-- 中段の左 -->
      <div class="col-4 item d-none d-sm-flex">
        <p class="sabu-word"><%=result_words[3] %></p>
      </div>

      <div class="col-12 col-sm-4 item">
        <div class="row">
          <div class="col-12">
            <h1><%= result_message %></h1>
          </div>
          <div class="col-12">
            <p class="message"><%=result_text %></p>
          </div>
          <div class="col-12">
            <a href="/">もう一度</a>
          </div>
        </div>
      </div>

      <!-- 中段の右 -->
      <div class="col-4 item d-none d-sm-flex">
        <p class="sabu-word"><%=result_words[4] %></p>
      </div>
    </div>

    <!-- 下段の3個 -->
    <div class="row d-none d-sm-flex">
      <div class="col-4 item">
        <p class="sabu-word"><%=result_words[5] %></p>
      </div>
      <div class="col-4 item">
        <p class="sabu-word"><%=result_words[6] %></p>
      </div>
      <div class="col-4 item">
        <p class="sabu-word"><%=result_words[7] %></p>
      </div>
    </div>

  </div>
</body>
<%-include("footer") %>
